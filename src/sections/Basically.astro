---
interface Props{
    title: string;
    subtitle?: string;
}

const {title, subtitle} = Astro.props;
---

<div class="flex flex-col items-center justify-center h-[100vh] w-full overflow-hidden" home-texts>
    <div class="flex flex-col items-center">
        <h1 class="text-6xl font-medium text-center">{title}</h1>
        {subtitle && <h2 class="mt-3 text-2xl font-semibold text-gray-600 dark:text-gray-500 text-center">{subtitle}</h2>}
    </div>
</div>

<script>
    import { gsap } from "gsap";
    import { setSection } from '../function/section';
    const element = document.querySelector('[home-texts]');
    gsap.to(element, {
        ease: 'none',
        scrollTrigger: {
            trigger: element,
            start: "50% 50%",
            end: "100% 50%",
            onEnter: () => setSection(""),
            onEnterBack: () => setSection(""),
            scrub: true
        },
        opacity: 0,
        y: '-30vh',
        duration: 3
    })
</script>

<style>
    img{
        opacity: 0;
        right: 400px;
    }
</style>